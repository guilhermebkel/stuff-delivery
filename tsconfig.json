{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@asgardian/*": ["apps/asgardian/src/*"],
      "@hermes/*": ["apps/hermes/src/*"],
      "@iris/*": ["apps/iris/src/*"],
      "@shared/protos": ["apps/shared/rpc/protos"],
      "@shared/rpc": ["apps/shared/rpc/src"],
      "@shared/response": ["apps/shared/response/src"],
      "@shared/cache": ["apps/shared/cache/src"],
      "@shared/error": ["apps/shared/error/src"],
      "@shared/event": ["apps/shared/event/src"],
      "@shared/core": ["apps/shared/core/src"],
      "@shared/storage": ["apps/shared/storage/src"],
      "@shared/auth": ["apps/shared/auth/src"]
    }
  },
  "exclude": ["node_modules", "migrations/*"]
}
