{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "paths": {
      "@config/*": ["config/*"],
      "@services/*": ["services/*"],
      "@jobs/*": ["jobs/*"],
      "@core/*": ["core/*"],
      "@models/*": ["models/*"],
      "~/*": ["./*"]
    }
  },
  "include": ["src", "__tests__", "boot"]
}
